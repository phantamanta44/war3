package io.github.phantamanta44.zcubed.model.obj;

import io.github.phantamanta44.zcubed.model.IModelCustom;
import io.github.phantamanta44.zcubed.model.IModelCustomLoader;
import io.github.phantamanta44.zcubed.model.ModelFormatException;
import net.minecraft.util.ResourceLocation;

public class ObjModelLoader implements IModelCustomLoader
{

    @Override
    public String getType()
    {
        return "OBJ model";
    }

    private static final String[] types = { "obj" };
    @Override
    public String[] getSuffixes()
    {
        return types;
    }

    @Override
    public IModelCustom loadInstance(ResourceLocation resource) throws ModelFormatException
    {
        return new WavefrontObject(resource);
    }
}